<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:gravity="center_vertical"
    android:id="@+id/item_main_chat_relative_item"
    android:padding="8dp">

    <ImageView
        android:id="@+id/item_main_chat_img"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/item_main_chat_txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/item_main_chat_img"
        android:singleLine="true"
        android:text="微信运动"
        android:textColor="#000000"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/item_main_chat_txt_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/item_main_chat_img"
        android:singleLine="true"
        android:text="[应用消息]"
        android:textColor="@color/fontcolor_content"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/item_main_chat_txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:singleLine="true"
        android:text="13:12"
        android:textColor="@color/fontcolor_content"
        android:textSize="16dp" />

</RelativeLayout>